pipeline {
	agent any
	stages {


        stage('Build Docker') {
            steps {
                sh"""
                    podman build -t ittiel/fyber-consul-service:1.0.0 .
                """
            }
        }

        stage('Deploy to registry') {
            steps {
                echo "Deploying artifact to Docker registry"
            }
        }
        stage('clean dir') {
        			steps {
        				deleteDir() /* clean up our workspace */
        			}
        		}
	}
}